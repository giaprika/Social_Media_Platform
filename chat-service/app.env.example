# Environment
ENVIRONMENT=development

# Database Connection (preferred - supports special characters in password)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=chat_db
DB_SSLMODE=disable

# Legacy: Full connection string (use if DB_HOST is not set)
# DB_SOURCE=postgresql://user:password@localhost:5432/chat_db?sslmode=disable

# Redis
REDIS_ADDR=localhost:6379

# Server Addresses
HTTP_SERVER_ADDRESS=0.0.0.0:8080
GRPC_SERVER_ADDRESS=0.0.0.0:50051

# Database Pool Settings (optional)
# DB_MAX_CONNS=25
# DB_MIN_CONNS=5
# DB_MAX_CONN_LIFE_MINUTES=60
# DB_MAX_CONN_IDLE_MINUTES=15

# Outbox Processor (optional)
# OUTBOX_POLL_INTERVAL_MS=100
# OUTBOX_BATCH_SIZE=100
# METRICS_PORT=9090
